<%= simple_form_for(rule) do |f| %>
  <% if rule.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(rule.errors.count, "error") %> prohibited this rule from being saved:</h2>

      <ul>
      <% rule.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="row">
        <div class="col-md-3">
          <%= f.label :trouble_id %>
        </div>
        <div class="col-md-9">
          <%= f.association :trouble, label_method: :trouble_name, value_method: :id, label: false, input_html: {class: 'form-control'} %>
        </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
        <div class="col-md-3">
          <%= f.label :indication_id %>
        </div>
        <div class="col-md-9">
          <%= f.association :indication, label_method: :indication_name, value_method: :id, label: false, input_html: {class: 'form-control'} %>
        </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
        <div class="col-md-3">
          <%= f.label :weight %>
        </div>
        <div class="col-md-9">
          <%= f.input :weight, label: false, input_html: {class: 'form-control'} %>
        </div>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
